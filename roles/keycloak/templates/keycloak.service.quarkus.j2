[Unit]
Description=Keycloak app
After=network.target

[Service]
Type=idle
Environment="JAVA_OPTS={{ keycloak_java_opts }}"
EnvironmentFile=-{{ keycloak_home }}/conf/env.conf
User={{ keycloak_service_user }}
Group={{ keycloak_service_user }}
ExecStart=/bin/bash -c "{{ keycloak_home }}/bin/kc.sh start --auto-build"
TimeoutStartSec=600
TimeoutStopSec=600

[Install]
WantedBy=multi-user.target
