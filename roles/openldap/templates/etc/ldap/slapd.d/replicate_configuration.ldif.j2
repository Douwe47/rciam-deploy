dn: cn=config
changetype: modify
replace: olcServerID
olcServerID: {{ openldap_olc_server_ids[0].id }} {{ openldap_olc_server_ids[0].uri }}
olcServerID: {{ openldap_olc_server_ids[1].id }} {{ openldap_olc_server_ids[1].uri }}

dn: olcOverlay=syncprov,olcDatabase={0}config,cn=config
changetype: add
objectClass: olcOverlayConfig
objectClass: olcSyncProvConfig
